import os

# Caminho para a pasta de imagens
img_folder = 'img'

# Verificar se a pasta 'img' existe
if not os.path.exists(img_folder):
    raise AssertionError(f'A pasta "{img_folder}" não existe.')

# Verificar se a pasta contém imagens (exemplo: .jpg e .png)
img_extensions = ['.jpg', '.jpeg', '.png']
images = [f for f in os.listdir(img_folder) if os.path.splitext(f)[1].lower() in img_extensions]

if not images:
    raise AssertionError(f'A pasta "{img_folder}" não contém imagens válidas.')

print("Todas as verificações passaram com sucesso!")
